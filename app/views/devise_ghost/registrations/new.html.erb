<div class="auth-container">
  <h1 class="header">Create your account</h1>
  <% if alert.present? %>
    <p class="alert"><%= alert %></p>
  <% end %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="auth-form --signup">
      <%= image_tag "default-avatar.png", :class => "avatar-placeholder" %>
      <div
        class="form-group"
      >
        <%= f.label :email, "Email address", class: "lbl" %>
        <%= f.email_field :email,
            autofocus: true,
            autocomplete: "email",
            class: "field",
            placeholder: "Eg. johnh.watson@gmail.com"
        %>
      </div>
      <div
        class="form-group"
      >
        <%= f.label :fullname, "Full name", class: "lbl" %>
        <%= f.text_field :fullname,
            class: "field",
            placeholder: "Eg. John H. Watson"
        %>
      </div>
      <div
        class="form-group"
      >
        <%= f.label :password, "Password", class: "lbl" %>
        <%= f.password_field :password,
            class: "field",
            placeholder: "At least 8 characters"
        %>
      </div>
    </div>
    <div class="signup-button-container">
      <button
        class="btn button --green --wide"
      >
        Create Account
      </button>
    </div>
  <% end %>
</div>
